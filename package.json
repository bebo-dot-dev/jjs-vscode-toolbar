{
    "publisher": "jjssoftware",
    "name": "jjs-vscode-toolbar",
    "displayName": "jjs-vscode-toolbar",
    "description": "A VSCode Toolbar",
    "version": "0.0.5",
    "engines": {
        "vscode": "^1.45.0",
        "npm": ">=10",
        "node": ">=20"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "jjstoolbar.newFile",
                "title": "New File",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/newfile-black.png",
                    "dark": "./media/newfile-white.png"
                }
            },
            {
                "command": "jjstoolbar.openFile",
                "title": "Open File...",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/newfolder-black.png",
                    "dark": "./media/newfolder-white.png"
                }
            },
            {
                "command": "jjstoolbar.save",
                "title": "Save",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/save-black.png",
                    "dark": "./media/save-white.png"
                }
            },
            {
                "command": "jjstoolbar.saveAll",
                "title": "Save All",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/saveall-black.png",
                    "dark": "./media/saveall-white.png"
                }
            },
            {
                "command": "jjstoolbar.close",
                "title": "Close",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.closeAll",
                "title": "Close All",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/closeall-black.png",
                    "dark": "./media/closeall-white.png"
                }
            },
            {
                "command": "jjstoolbar.undo",
                "title": "Undo",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/undo-black.png",
                    "dark": "./media/undo-white.png"
                }
            },
            {
                "command": "jjstoolbar.redo",
                "title": "Redo",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/redo-black.png",
                    "dark": "./media/redo-white.png"
                }
            },
            {
                "command": "jjstoolbar.wordwrap",
                "title": "Wordwrap",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/wordwrap-black.png",
                    "dark": "./media/wordwrap-white.png"
                }
            },
            {
                "command": "jjstoolbar.lineComment",
                "title": "Line Comment",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/sidebar-black.png",
                    "dark": "./media/sidebar-white.png"
                }
            },
            {
                "command": "jjstoolbar.blockComment",
                "title": "Block Comment",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/sidebar-black.png",
                    "dark": "./media/sidebar-white.png"
                }
            },
            {
                "command": "jjstoolbar.saveAs",
                "title": "Save As",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.upperCase",
                "title": "Uppercase",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/arrow_upward.svg",
                    "dark": "./media/arrow_upward_light.svg"
                }
            },
            {
                "command": "jjstoolbar.lowerCase",
                "title": "Lowercase",
                "category": "JJSToolbarCommands",
                "icon": {
                    "light": "./media/arrow_downward.svg",
                    "dark": "./media/arrow_downward_light.svg"
                }
            },
            {
                "command": "jjstoolbar.prettifyJson",
                "title": "Prettify Json",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.formatXml",
                "title": "Format XML",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.tabsToSpaces",
                "title": "Tabs to Spaces",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.trimWhitespace",
                "title": "Trim Whitespace",
                "category": "JJSToolbarCommands"
            },
            {
                "command": "jjstoolbar.languageMode",
                "title": "Language Mode",
                "category": "JJSToolbarCommands"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "jjstoolbar.newFile",
                    "alt": "jjstoolbar.newFile",
                    "group": "navigation@1"
                },
                {
                    "command": "jjstoolbar.openFile",
                    "alt": "jjstoolbar.openFile",
                    "group": "navigation@2"
                },
                {
                    "command": "jjstoolbar.save",
                    "alt": "jjstoolbar.save",
                    "group": "navigation@3"
                },
                {
                    "command": "jjstoolbar.saveAll",
                    "alt": "jjstoolbar.saveAll",
                    "group": "navigation@4"
                },
                {
                    "command": "jjstoolbar.undo",
                    "alt": "jjstoolbar.undo",
                    "group": "navigation@5"
                },
                {
                    "command": "jjstoolbar.redo",
                    "alt": "jjstoolbar.redo",
                    "group": "navigation@6"
                },
                {
                    "command": "jjstoolbar.closeAll",
                    "alt": "jjstoolbar.closeAll",
                    "group": "navigation@7"
                },
                {
                    "command": "jjstoolbar.wordwrap",
                    "alt": "jjstoolbar.wordwrap",
                    "group": "navigation@8"
                },
                {
                    "command": "jjstoolbar.upperCase",
                    "alt": "jjstoolbar.upperCase",
                    "group": "navigation@9"
                },
                {
                    "command": "jjstoolbar.lowerCase",
                    "alt": "jjstoolbar.lowerCase",
                    "group": "navigation@10"
                }
            ],
            "editor/context": [
                {
                    "command": "jjstoolbar.newFile",
                    "group": "Group1@1"
                },
                {
                    "command": "jjstoolbar.openFile",
                    "group": "Group1@2"
                },
                {
                    "command": "jjstoolbar.save",
                    "group": "Group1@3"
                },
                {
                    "command": "jjstoolbar.saveAs",
                    "group": "Group1@4"
                },
                {
                    "command": "jjstoolbar.saveAll",
                    "group": "Group1@5"
                },
                {
                    "command": "jjstoolbar.close",
                    "group": "Group2@1"
                },
                {
                    "command": "jjstoolbar.closeAll",
                    "group": "Group2@2"
                },
                {
                    "command": "jjstoolbar.lineComment",
                    "group": "Group3@1"
                },
                {
                    "command": "jjstoolbar.blockComment",
                    "group": "Group3@2"
                },
                {
                    "command": "jjstoolbar.upperCase",
                    "group": "Group4@1"
                },
                {
                    "command": "jjstoolbar.lowerCase",
                    "group": "Group4@2"
                },
                {
                    "command": "jjstoolbar.prettifyJson",
                    "group": "Group5@1",
                    "when": "editorLangId == json"
                },
                {
                    "command": "jjstoolbar.formatXml",
                    "group": "Group5@2",
                    "when": "editorLangId == xml"
                },
                {
                    "command": "jjstoolbar.tabsToSpaces",
                    "group": "Group5@3"
                },
                {
                    "command": "jjstoolbar.trimWhitespace",
                    "group": "Group5@4"
                },
                {
                    "command": "jjstoolbar.languageMode",
                    "group": "Group5@5"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.100.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.21",
        "eslint": "^9.27.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "glob": "^11.0.2",
        "mocha": "^11.5.0",
        "typescript": "^5.8.3",
        "vscode-test": "^1.6.1"
    },
    "homepage": "https://github.com/jjssoftware/jjs-vscode-toolbar",
    "repository": {
        "type": "git",
        "url": "https://github.com/jjssoftware/jjs-vscode-toolbar"
    }
}
